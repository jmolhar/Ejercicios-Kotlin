fun main() {
    // ejemplo de true
    println(esSuma(153))
    // ejemplo de false
    println(esSuma(123))
}

fun esSuma(numero: Int): Boolean {
    val num = numero
    val digitos = num.toString()
    val cantidadDigitos = digitos.length
    
    var suma = 0
    for (digito in digitos) {
        val valorDigito = digito - '0'
        var potencia = 1
        
        for (i in 1..cantidadDigitos) {
            potencia *= valorDigito
        }
        
        suma += potencia
    }
    
    return suma == num
}
